#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit hooks..."

# Run linting
echo "Running lint..."
pnpm lint || {
  echo "Linting failed. Please fix the errors and try again."
  exit 1
}

# Run formatting
echo "Running format..."
pnpm format || {
  echo "Formatting failed. Please fix the errors and try again."
  exit 1
}

echo "All pre-commit hooks passed!" 
